# Silicon Labs Project Configuration Tools: slcp, v0, Component selection file.
project_name: bluetooth_optimized_energy_consuming_client
label: Bluetooth - Optimized Energy Consuming Sensor - Status Display
description: |
  This project aims to implement an optimized energy consuming temperature sensor.
filter:
- name: Device Type
  value: [SoC]
- name: Project Difficulty
  value: [Advanced]
- name: Wireless Technology
  value: [Bluetooth]
package: Bluetooth
quality: experimental

readme:
- path: ../../README.md

source:
  - path: ../src/main.c
  - path: ../src/app.c
  - path: ../src/client_app.c

include:
  - path: ../inc
    file_list:
      - path: app.h
      - path: client_app.h
      
component:
- id: bluetooth_stack
- id: gatt_configuration
- id: gatt_service_device_information
- id: bluetooth_feature_legacy_advertiser
- id: bluetooth_feature_connection
- id: bluetooth_feature_gatt
- id: bluetooth_feature_gatt_server
- id: bluetooth_feature_legacy_scanner
- id: bluetooth_feature_system
- id: bluetooth_feature_sm
- id: mpu
- id: bt_post_build
- id: rail_util_pti
- id: app_log
- id: i2cspm
  instance: [qwiic]
- id: iostream_usart
  instance: [vcom]
- id: services_oled_glib
  from: third_party_hw_drivers
- id: sparkfun_micro_oled_ssd1306
  from: third_party_hw_drivers
- id: app_assert

config_file:    
  - override:
      component: gatt_configuration
      file_id: gatt_configuration_file_id
    path: "../config/btconf/gatt_configuration.btconf"
    directory: "btconf"

  - override:
      component: i2cspm
      file_id: i2cspm_config
      instance: qwiic
      condition: [brd2601b]
    path: ../config/brd2601b/sl_i2cspm_qwiic_config.h

toolchain_settings:
  - option: gcc_linker_option
    value: "-u _printf_float"
    
other_file:
  - path: ../../images/client_overview.png
    directory: images
  - path: ../../images/client_result.GIF
    directory: images
  - path: ../../images/client.png
    directory: images
  - path: ../../images/create_example_sensor.png
    directory: images
  - path: ../../images/create_example.png
    directory: images
  - path: ../../images/display.png
    directory: images
  - path: ../../images/efr_connect.png
    directory: images
  - path: ../../images/energy_harvesting_app_performance.png
    directory: images
  - path: ../../images/energy_monitor.png
    directory: images
  - path: ../../images/overview.png
    directory: images
  - path: ../../images/pv.png
    directory: images
  - path: ../../images/runtime.png
    directory: images
  - path: ../../images/sdk_extension.png
    directory: images
  - path: ../../images/sensor_overview.png
    directory: images
  - path: ../../images/sensor.png
    directory: images

sdk_extension:
  - id: third_party_hw_drivers
